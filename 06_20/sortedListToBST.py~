class Solution:
    def sortedListToBST(self, head):
        if not head:
            return None
        tail, length = head, 0
        while tail:
            length += 1
            tail = tail.next
        return self.dfs(head, 0, length-1)
    
    def dfs(self, head, L, R):
        if L == R:
            return TreeNode(head.val)
        if L > R:
            return None
        
